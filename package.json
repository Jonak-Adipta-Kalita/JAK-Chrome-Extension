{
    "name": "jak-chrome-extension",
    "displayName": "JAK Chrome Extension",
    "version": "0.0.1",
    "description": "Simplifying your digital life with multiple features in one app, reducing the need for switching and saving storage space.",
    "author": "Jonak Adipta Kalita",
    "scripts": {
        "dev": "plasmo dev",
        "build": "plasmo build",
        "test": "plasmo test",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prettier": "prettier **/*.{jsx,tsx,md,json}",
        "prettier:fix": "prettier --write **/*.{jsx,tsx,md,json}",
        "format": "npm run lint:fix && npm run prettier:fix",
        "check:version": "ncu",
        "prepare": "husky install"
    },
    "dependencies": {
        "plasmo": "^0.83.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
        "@types/chrome": "^0.0.251",
        "@types/node": "^20.5.9",
        "@types/react": "^18.2.21",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.50.0",
        "eslint-plugin-react": "^7.33.2",
        "postcss": "^8.4.31",
        "prettier": "^3.0.3",
        "prettier-plugin-tailwindcss": "^0.5.4",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.2.2",
        "husky": "^8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jonak-Adipta-Kalita/JAK-Chrome-Extension.git"
    },
    "keywords": [
        "chrome",
        "extension"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Jonak-Adipta-Kalita/JAK-Chrome-Extension/issues"
    },
    "homepage": "https://github.com/Jonak-Adipta-Kalita/JAK-Chrome-Extension#readme",
    "manifest": {
        "host_permissions": [
            "https://*/*"
        ]
    }
}
